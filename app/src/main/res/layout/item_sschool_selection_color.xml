<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="42dp"
    android:layout_height="42dp"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_sschool_selection_color_circle"
        android:layout_gravity="center"
        />
    
    <ImageView
        android:id="@+id/sschool_selection_color_fill_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_sschool_color_selection_fill"
        android:layout_gravity="center"
        tools:tint="@color/colorAccent"
        />

    <ImageView
        android:id="@+id/sschool_selection_color_tick_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sschool_selected_color"
        android:layout_gravity="center"
        tools:visibility="gone"
        />

</FrameLayout>
